<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (users != '') { %>
                    <table class="table table-striped text-center my-3" name="table">
                        <thead>
                          <tr class="table-dark">
                            <th scope="col">ID</th>
                            <th scope="col">Image</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% users.forEach((row, index) =>{ %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail" alt=""></td>
                                <td><%=  row.name %></td>
                                <td><%=  row.email %></td>
                                <td><%=  row.phone %></td>
                                <td>
                                  <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx1"></i></a>
                                  <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx1"></i></a>
                                </td>
                              </tr>
                          <% }) %>
                          
                        </tbody>
                      </table>
                <% }else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the databse</h1>
                <% } %>
                </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>